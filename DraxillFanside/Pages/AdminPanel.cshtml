@page
@model DraxillFanside.Pages.AdminPanelModel

<h2>Admin Panel</h2>

@if (Model.Users.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>
                        <form method="post" asp-page-handler="Delete">
                            <input type="hidden" name="username" value="@user.Username" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}
